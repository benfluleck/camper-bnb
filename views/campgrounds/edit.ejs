<%include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit Campground</h1>
        <div style="margin:auto;width:30%;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="name" name="name" value="<%= campground.name %>"/>
                </div>
                <div class="form-group">
                    <input type="url" class="form-control" name="image" placeholder="img" value="<%= campground.image %>"/>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" placeholder="description" value="<%= campground.description %>"></textarea>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="location" placeholder="location" value="<%= campground.location %>"/>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Save</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>    
    </div>
</div>

<%include ../partials/footer %>