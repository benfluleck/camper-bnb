<div style="width:50%; margin:auto">
	<form action="/search" method="POST" class="search-form">
		<div class="form-group search-form">
			<!--label for="search">Search for a Campground</label-->
			<i class="fa fa-search search-label" aria-hidden="true"></i>
			<input type="text" class="form-control search-input" placeholder="Search by Name" name="search" id="search" onfocusout="if (this.value){this.form.submit()}" required/>
